<%= form_for [item] do |f| %>
  <% if post.errors.any? %>
   <div class="alert alert-danger">
     <h4><%= pluralize(post.errors.count, "error") %></h4>
     <ul>
       <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

  <%= form_group_tag(item.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter item title" %>
  <% end %>
  <%= form_group_tag(item.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter item body" %>
  <% end %>

  <div class="form-group">
    <%= render partial: 'labels/form', locals: { f: f, topic: @topic, labels: @post.labels } %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
